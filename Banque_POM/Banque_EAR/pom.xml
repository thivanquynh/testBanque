<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>fr.afcepf.ai100</groupId>
    <artifactId>Banque_POM</artifactId>
    <version>1.0</version>
  </parent>
  <artifactId>Banque_EAR</artifactId>
  <packaging>ear</packaging>
  <dependencies>
  	<dependency>
  		<groupId>fr.afcepf.ai100</groupId>
  		<artifactId>Banque_Entity</artifactId>
  		<version>1.0</version>
  		<type>jar</type>
  	</dependency>
  	<dependency>
  		<groupId>fr.afcepf.ai100</groupId>
  		<artifactId>Banque_DATA_API</artifactId>
  		<version>1.0</version>
  		<type>jar</type>
  	</dependency>
  	<dependency>
  		<groupId>fr.afcepf.ai100</groupId>
  		<artifactId>Banque_BUSINESS_API</artifactId>
  		<version>1.0</version>
  		<type>jar</type>
  	</dependency>
  	<dependency>
  		<groupId>fr.afcepf.ai100</groupId>
  		<artifactId>Banque_DATA_EJB</artifactId>
  		<version>1.0</version>
  		<type>ejb</type>
  	</dependency>
  	<dependency>
  		<groupId>fr.afcepf.ai100</groupId>
  		<artifactId>Banque_BUSINESS_EJB</artifactId>
  		<version>1.0</version>
  		<type>ejb</type>
  	</dependency>
  	<dependency>
  		<groupId>fr.afcepf.ai100</groupId>
  		<artifactId>Banque_WEB</artifactId>
  		<version>1.0</version>
  		<type>war</type>
  	</dependency>
  </dependencies>
  <build>
  	<plugins>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-ear-plugin</artifactId>
  			<version>2.8</version>
  			<configuration>
  				<defaultLibBundleDir>lib</defaultLibBundleDir>
  				<modules>
  					<webModule>
  						<groupId>fr.afcepf.ai100</groupId>
  						<artifactId>Banque_WEB</artifactId>
  						<uri>toto.war</uri>
  						<contextRoot>/BanqueAi100</contextRoot>
  					</webModule>
  					<ejbModule>
  						<groupId>fr.afcepf.ai100</groupId>
  						<artifactId>Banque_DATA_EJB</artifactId>
  						<uri>titi.jar</uri>
  					</ejbModule>
  					<ejbModule>
  						<groupId>fr.afcepf.ai100</groupId>
  						<artifactId>Banque_BUSINESS_EJB</artifactId>
  						<uri>foo.jar</uri>
  					</ejbModule>
  				</modules>
  			</configuration>
  		</plugin>
  	</plugins>
  </build>
</project>